<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_below="@+id/linearLayoutId"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.odisenglish.popularmovies.MovieDetailActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <fragment
        android:name="com.odisenglish.popularmovies.DetailActivityFragment"
        android:id="@+id/detail_image_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/detail_activity_image_fragment"   />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionTextView"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/detail_image_fragment"
        android:padding="15dp"/>


</RelativeLayout>

</ScrollView>